# BlueBox Flight Recorder Configuration
# Optimized for maximum performance during short flights

# CPU Configuration
CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y
CONFIG_FREERTOS_HZ=1000

# Memory Configuration
# PSRAM disabled - not available on this board

# WiFi Configuration (reduced buffers for memory savings)
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=4
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=16
CONFIG_ESP_WIFI_DYNAMIC_TX_BUFFER_NUM=16
CONFIG_ESP_WIFI_AMPDU_TX_ENABLED=n
CONFIG_ESP_WIFI_AMPDU_RX_ENABLED=n

# Compiler Optimizations
CONFIG_COMPILER_OPTIMIZATION_PERF=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_DISABLE=y

# Log Level (reduce to WARNING in production for speed)
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# SPI Configuration
CONFIG_SPI_MASTER_ISR_IN_IRAM=y

# Task Watchdog (disable during flight for max speed)
CONFIG_ESP_TASK_WDT=n

# Main task stack size (increased for WiFi initialization and PHY calibration)
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Brownout detector (may trigger during WiFi PHY init)
CONFIG_ESP_BROWNOUT_DET=n

# Flash Size
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y

# Partition Table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# TLS/SSL Configuration (for HTTPS support without certificate verification)
CONFIG_ESP_TLS_SKIP_SERVER_CERT_VERIFY=y
